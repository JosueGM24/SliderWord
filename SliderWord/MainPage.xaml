<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SliderWord.MainPage">

    <ScrollView>
        <VerticalStackLayout
            
            Spacing="25">

            <Label
                Text="Digita una palabra"/>
            <Entry
                Placeholder="Mensaje"
                x:Name="message"/>
            <Button
                Text="Send value"
                Clicked="Button_Clicked"/>
            <Label
                Text="Empty"
                HorizontalOptions="CenterAndExpand"
                x:Name="rotateThisObject"/>
            <Slider
                x:Name="sliderRotate"
                ValueChanged="sliderRotate_ValueChanged"/>
            <Label
                Text="0°"
                x:Name="degrees"/>
            <BoxView
                WidthRequest="1000"
                Color="Orange"
                HeightRequest="10"/>
            <Image
                Source="pine.png"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="200"
                HeightRequest="200"
                x:Name="imagePine"/>
            <Slider
                x:Name="sliderImg"
                ValueChanged="sliderImg_ValueChanged"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
